	<!-- <connection-url>jdbc:h2:mem:wildfly10-test;DB_CLOSE_ON_EXIT=FALSE;DB_CLOSE_DELAY=-1</connection-url> -->
	<!-- <driver>h2</driver> -->
	<!-- <security> -->
	<!-- <user-name>sa</user-name> -->
	<!-- <password>sa</password> -->
